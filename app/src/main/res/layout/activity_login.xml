<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:fontFamily="@font/amita_bold"
        android:text="Log In"
        android:textColor="#14609C"
        android:textColorHint="#AE3232"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="232dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#725C5C5C"
        android:onClick="redirectToRegisterPage"
        android:text="Not Registered? Sign Up Here"
        android:textAlignment="center"
        android:textColor="#14609C"
        android:textColorHighlight="#00FFFFFF"
        android:textColorHint="#00FFFFFF"
        android:textColorLink="#00FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@+id/registerButton2"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="@+id/registerButton2"
        app:layout_constraintTop_toBottomOf="@+id/registerButton2" />

    <EditText
        android:id="@+id/passwordEditText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#851B1B"
        android:ems="10"
        android:fontFamily="@font/roboto_bold"
        android:hint="Password"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="#A4FF4032"
        android:textColorHint="#90C54F47"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/usernameEditText2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/usernameEditText2"
        app:layout_constraintTop_toBottomOf="@+id/usernameEditText2"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/registerButton2"
        android:layout_width="235dp"
        android:layout_height="55dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#3E2C8CD6"
        android:onClick="onLoginButtonClick"
        android:text="Login"
        android:textAlignment="center"
        android:textColor="#E1E3E4E4"
        android:textColorLink="#853030"
        android:textDirection="firstStrong"
        android:textSize="16sp"
        app:iconTint="#9C2D2D"
        app:layout_constraintEnd_toEndOf="@+id/passwordEditText2"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="@+id/passwordEditText2"
        app:layout_constraintTop_toBottomOf="@+id/passwordEditText2" />

    <EditText
        android:id="@+id/usernameEditText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:backgroundTint="#851B1B"
        android:ems="10"
        android:fontFamily="@font/roboto_bold"
        android:hint="Username"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="#A4FF4032"
        android:textColorHint="#90C54F47"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.004" />

</androidx.constraintlayout.widget.ConstraintLayout>