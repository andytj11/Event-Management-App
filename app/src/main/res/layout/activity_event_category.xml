<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_redblue"
    tools:context=".EventCategoryActivity">

    <EditText
        android:id="@+id/categoryNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="#851B1B"
        android:ems="10"
        android:hint="Category Name"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="#E1E3E4E4"
        android:textColorHint="#90C8C8C8"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline8"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toTopOf="@+id/guideline7"
        app:layout_constraintVertical_bias="0.209" />

    <Switch
        android:id="@+id/isCategoryActiveSwitch"
        android:layout_width="120dp"
        android:layout_height="34dp"
        android:text="Active"
        android:textColor="#90C8C8C8"
        android:textColorHint="#90C8C8C8"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline8"
        app:layout_constraintEnd_toEndOf="@+id/eventCountEditText"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="@+id/eventCountEditText"
        app:layout_constraintTop_toBottomOf="@+id/eventCountEditText"
        app:layout_constraintVertical_bias="0.063" />

    <Button
        android:id="@+id/saveCategoryButton"
        android:layout_width="235dp"
        android:layout_height="55dp"
        android:backgroundTint="#3E2C8CD6"
        android:onClick="onSaveButtonClick"
        android:text="Save Category"
        android:textColor="#E1E3E4E4"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline8"

        app:layout_constraintEnd_toEndOf="@+id/editText"
        app:layout_constraintStart_toStartOf="@+id/categoryLocationEditText"
        app:layout_constraintTop_toBottomOf="@+id/categoryLocationEditText"
        app:layout_constraintVertical_bias="0.31" />

    <EditText
        android:id="@+id/eventCountEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#851B1B"
        android:ems="10"
        android:hint="Event Count"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="#E1E3E4E4"
        android:textColorHint="#90C8C8C8"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline8"
        app:layout_constraintEnd_toEndOf="@+id/categoryNameEditText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/categoryNameEditText"
        app:layout_constraintTop_toBottomOf="@+id/categoryNameEditText"
        app:layout_constraintVertical_bias="0.028" />

    <EditText
        android:id="@+id/categoryLocationEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:backgroundTint="#851B1B"
        android:ems="10"
        android:hint="Category Location"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="#E1E3E4E4"
        android:textColorHint="#90C8C8C8"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/isCategoryActiveSwitch"
        app:layout_constraintStart_toStartOf="@+id/isCategoryActiveSwitch"
        app:layout_constraintTop_toBottomOf="@id/isCategoryActiveSwitch" />

    <TextView
        android:id="@+id/categoryIDFieldTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#E1E3E4E4"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/categoryNameEditText"
        app:layout_constraintEnd_toEndOf="@+id/categoryNameEditText"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="@+id/categoryNameEditText"
        app:layout_constraintTop_toTopOf="@+id/guideline7"
        app:layout_constraintVertical_bias="0.545" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:fontFamily="@font/amita_bold"
        android:text="New Category Form"
        android:textAlignment="center"
        android:textColor="#E1E3E4E4"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.96" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.17" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95348835" />

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_collapseMode="pin"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </com.google.android.material.appbar.AppBarLayout>

</androidx.constraintlayout.widget.ConstraintLayout>